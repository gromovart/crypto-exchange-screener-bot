# ============================================
# BYBIT API CONFIGURATION
# ============================================

# Mainnet API Keys (для реальной торговли)
BYBIT_API_KEY=
BYBIT_SECRET_KEY=
BYBIT_API_URL=https://api.bybit.com

# Testnet API Keys (для тестирования)
BYBIT_TESTNET_API_KEY=your_testnet_api_key_here
BYBIT_TESTNET_SECRET_KEY=your_testnet_secret_here
BYBIT_API_TEST_URL=https://api-testnet.bybit.com

# Network Selection
USE_TESTNET=true

# ============================================
# FUTURES TRADING CONFIGURATION
# ============================================

# Futures Market
FUTURES_CATEGORY=linear      # linear (USDT-M) или inverse (COIN-M)
FUTURES_LEVERAGE=10.0        # Кредитное плечо

# Trading Settings
TRADING_SYMBOL=BTCUSDT
TRADING_ENABLED=false

# Risk Management
RISK_PERCENT=2.0
STOP_LOSS=5.0
TAKE_PROFIT=10.0
MAX_POSITION_SIZE=0.01

# ============================================
# SIGNAL MONITORING CONFIGURATION
# ============================================

# Signal Detection
ALERT_THRESHOLD=0.5          # Порог сигнала в процентах (0.5%)
UPDATE_INTERVAL=15           # Интервал проверки в секундах
TRACKED_INTERVALS=5,15,60    # Интервалы для мониторинга (в минутах)

# Signal Filtering
SIGNAL_COOLDOWN=300          # 5 минут между одинаковыми сигналами
MIN_VOLUME_FUTURES=1000000   # Минимальный объем $1M для фильтрации
MAX_SIGNALS_PER_CHECK=5      # Максимум 5 сигналов за одну проверку

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================

# Request Management
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=15           # Секунд
RATE_LIMIT_DELAY=50          # ms между запросами

# Data Handling
PRICE_HISTORY_SIZE=43200     # 12 часов данных
INITIAL_DATA_FETCH=true
DATA_FETCH_LIMIT=100

# Caching
USE_MEMORY_CACHE=true
CACHE_TTL=300                # Секунд

# ============================================
# HTTP & WEBSOCKET SERVER
# ============================================

# HTTP Server
HTTP_PORT=8080
HTTP_ENABLED=true
CORS_ORIGINS=*

# WebSocket (для реальных обновлений)
WEBSOCKET_ENABLED=false
WEBSOCKET_RECONNECT_INTERVAL=5

# ============================================
# LOGGING & MONITORING
# ============================================

# File Logging
LOG_LEVEL=info
LOG_FILE=logs/bot.log
LOG_MAX_SIZE=10              # MB
LOG_MAX_BACKUPS=5
LOG_FORMAT=text              # text или json

# Signal Logging
LOG_SIGNALS_TO_FILE=true
SIGNALS_LOG_FILE=logs/signals.log

# Console Output
CONSOLE_OUTPUT=true
COLORED_OUTPUT=true
DEBUG_MODE=false

# ============================================
# EXTERNAL INTEGRATIONS
# ============================================

# Telegram Bot
TG_API_KEY=

# Database (PostgreSQL - опционально)
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bybit_bot
DB_USER=postgres
DB_PASSWORD=

# Email Alerts (опционально)
ALERT_EMAIL=
ALERT_ENABLED=true

# ============================================
# DISPLAY SETTINGS
# ============================================

TERMINAL_WIDTH=80
USE_COLORS=true
SHOW_SYMBOL_LINKS=true


# ============================================
# GROWTH MONITORING CONFIGURATION
# ============================================

# Growth Periods (in minutes)
GROWTH_PERIODS=5,15,30,60,120,240

# Growth/Fall Thresholds (in percent)
GROWTH_THRESHOLD=2.0    # Минимальный рост для сигнала
FALL_THRESHOLD=2.0      # Минимальное падение для сигнала

# Monitoring Settings
CHECK_CONTINUITY=true   # Проверять непрерывность роста/падения
MIN_DATA_POINTS=3       # Минимальное количество точек данных

# Signal Filtering
MIN_VOLUME_GROWTH=100000  # Минимальный объем $100K для сигналов роста
SIGNAL_COOLDOWN=300       # 5 минут между одинаковыми сигналами