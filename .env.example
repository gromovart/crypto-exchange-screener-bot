#.env.example
# Bybit API Keys (Mainnet)
BYBIT_API_KEY=
BYBIT_SECRET_KEY=
BYBIT_API_URL=https://api.bybit.com

# Bybit Testnet API Keys
BYBIT_TESTNET_API_KEY=your_testnet_api_key_here
BYBIT_TESTNET_SECRET_KEY=your_testnet_secret_here
BYBIT_API_TEST_URL=https://api-testnet.bybit.com

# Trading Configuration
TRADING_SYMBOL=BTCUSDT
USE_TESTNET=true
TRADING_ENABLED=false

# Risk Management
RISK_PERCENT=2.0
STOP_LOSS=5.0
TAKE_PROFIT=10.0
MAX_POSITION_SIZE=0.01

# Monitoring Configuration
UPDATE_INTERVAL=10
PRICE_HISTORY_SIZE=8640  # 24 hours with 10-second updates
TRACKED_INTERVALS=1,5,10,15,30,60,120,240,480,720,1440,10080,43200

# Alert Configuration
ALERT_THRESHOLD=5.0
ALERT_ENABLED=true
ALERT_EMAIL=

# Database Configuration (optional)
DB_ENABLED=false
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bybit_bot
DB_USER=postgres
DB_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/bot.log
LOG_MAX_SIZE=10      # MB
LOG_MAX_BACKUPS=5
LOG_FORMAT=text      # text or json
CONSOLE_OUTPUT=true
COLORED_OUTPUT=true
DEBUG_MODE=false

# HTTP Server Configuration
HTTP_PORT=8080
HTTP_ENABLED=true
CORS_ORIGINS=*

# WebSocket Configuration
WEBSOCKET_ENABLED=false
WEBSOCKET_RECONNECT_INTERVAL=5

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=100  # ms between requests

# Telegram
TG_API_KEY=

# Оптимизация
INITIAL_DATA_FETCH=true
DATA_FETCH_LIMIT=100
USE_MEMORY_CACHE=true
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=15
RATE_LIMIT_DELAY=50
PRICE_HISTORY_SIZE=43200  # 12 часов данных при обновлении каждую секунду