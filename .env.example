# .env - Упрощенные настройки для Growth Monitor
# ============================================
# BYBIT API CONFIGURATION
# ============================================

# Mainnet API Keys (для реальной торговли)
BYBIT_API_KEY=
BYBIT_SECRET_KEY=
BYBIT_API_URL=https://api.bybit.com

# Testnet API Keys (рекомендуется для тестирования)
BYBIT_TESTNET_API_KEY=ваш_testnet_api_key
BYBIT_TESTNET_SECRET_KEY=ваш_testnet_secret_key
BYBIT_API_TEST_URL=https://api-testnet.bybit.com

# Network Selection
USE_TESTNET=true

# ============================================
# FUTURES CONFIGURATION
# ============================================

FUTURES_CATEGORY=linear

# ============================================
# GROWTH MONITORING CONFIGURATION
# ============================================

# Growth Periods (in minutes) - проверяем несколько периодов
GROWTH_PERIODS=5,15,30

# Growth/Fall Thresholds (in percent) - чувствительные пороги
GROWTH_THRESHOLD=0.05   # 0.05% для теста
FALL_THRESHOLD=0.05     # 0.05% для теста

# Monitoring Settings
CHECK_CONTINUITY=false   # Отключаем проверку непрерывности
MIN_DATA_POINTS=2       # Минимальное количество точек данных

# ============================================
# PERFORMANCE & LOGGING
# ============================================

UPDATE_INTERVAL=5           # 5 секунд для быстрого обновления
HTTP_PORT=8080
HTTP_ENABLED=false          # Отключаем HTTP для чистоты вывода
LOG_LEVEL=info
LOG_FILE=logs/growth.log

# ============================================
# SYMBOL FILTERING CONFIGURATION
# ============================================

# Фильтр символов (через запятую) или "all" для всех символов
# Примеры:
#   SYMBOL_FILTER=BTC,ETH,BNB,SOL,XRP,ADA,DOGE,MATIC,DOT,AVAX
#   SYMBOL_FILTER=BTCUSDT,ETHUSDT  (полные имена)
#   SYMBOL_FILTER=all              (ВСЕ символы)
#   SYMBOL_FILTER=                 (пусто = первые 50 по объему)
SYMBOL_FILTER=BTC,ETH,BNB,SOL,XRP,ADA,DOGE,MATIC,DOT,AVAX
# или полные имена: BTCUSDT,ETHUSDT,BNBUSDT

# Символы для исключения (через запятую)
EXCLUDE_SYMBOLS=STGUSDT,ICPUSDT  # Пример

# Максимальное количество символов для мониторинга (0 = без ограничений)
# Имеет эффект только при SYMBOL_FILTER=all или пустом
MAX_SYMBOLS_TO_MONITOR=100

# Минимальный объем для фильтрации (в USDT)
MIN_VOLUME_FILTER=100000

# ============================================
# SIGNAL FILTERS CONFIGURATION
# ============================================

# Включить фильтрацию сигналов
SIGNAL_FILTERS_ENABLED=true

# Паттерны для включения (через запятую, поддерживает *)
SIGNAL_INCLUDE_PATTERNS=BTC*,ETH*,BNB*

# Паттерны для исключения (через запятую, поддерживает *)
SIGNAL_EXCLUDE_PATTERNS=*DOWN*,*UP*,*BEAR*,*BULL*

# Минимальная уверенность сигнала (%)
MIN_CONFIDENCE=50

# Максимум сигналов в минуту для одного символа
MAX_SIGNALS_PER_MIN=3

# Настройки отображения
DISPLAY_MODE=compact          # compact | detailed
MAX_SIGNALS_PER_BATCH=10      # Макс сигналов в одном выводе
MIN_CONFIDENCE_DISPLAY=30     # Минимальная уверенность для отображения

# Фильтрация для отображения
DISPLAY_GROWTH=true           # Показывать рост
DISPLAY_FALL=true            # Показывать падение
DISPLAY_PERIODS=5,15,30      # Какие периоды показывать

# Цветовой вывод
USE_COLORS=true              # Использовать цвета в терминале