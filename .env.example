# .env - Упрощенные настройки для Growth Monitor
# ============================================


# Выбор биржи
EXCHANGE=bybit  # или binance
EXCHANGE_TYPE=futures  # или spot

# Binance API (опционально)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# НАСТРОЙКИ BYBIT API
# ============================================

# Основные ключи API (для реальной торговли)
BYBIT_API_KEY=your_api_key
BYBIT_SECRET_KEY=your_secret_key
BYBIT_API_URL=https://api.bybit.com

# Категория фьючерсов
FUTURES_CATEGORY=linear

# ============================================
# НАСТРОЙКИ СИМВОЛОВ И ФИЛЬТРАЦИИ
# ============================================

# Фильтр символов (через запятую) или "all" для всех
# Пример: BTC,ETH,BNB или BTCUSDT,ETHUSDT

# Фильтр символов (через запятую) или "all" для всех символов
# Примеры:
#   SYMBOL_FILTER=BTC,ETH,BNB,SOL,XRP,ADA,DOGE,MATIC,DOT,AVAX
#   SYMBOL_FILTER=BTCUSDT,ETHUSDT  (полные имена)
#   SYMBOL_FILTER=all              (ВСЕ символы)
#   SYMBOL_FILTER=                 (пусто = первые 50 по объему)
SYMBOL_FILTER = BTC, ETH, USDT, BNB, XRP, USDC, SOL, TRX, STETH, DOGE, ADA, BCH, WBTC, LINK, HYPE, ZEC, CBTC, LTC, SUI, AVAX, FDUSD, WETH, RRLS, AART, NNIGHT, ESPORTS, RRAVE, USD1, ASTER, SSTABLE, AAVE, PEPE, WWETH, GGAIX, ENA, UNI, DOT, NEAR, PAXG, PENGU, TRUMP, XMR, XLM

# Символы для исключения (через запятую)
EXCLUDE_SYMBOLS=STGUSDT,ICPUSDT

# Максимальное количество символов для мониторинга (0 = без ограничений)
MAX_SYMBOLS_TO_MONITOR=0

# Минимальный объем для фильтрации (в USDT)
MIN_VOLUME_FILTER=100000

# ============================================
# ДВИЖОК АНАЛИЗА (ANALYSIS ENGINE)
# ============================================

# Основные настройки анализа
ANALYSIS_UPDATE_INTERVAL=10
ANALYSIS_PERIODS=5,15,30,60
ANALYSIS_MAX_SYMBOLS_PER_RUN=100
ANALYSIS_SIGNAL_THRESHOLD=2.0
ANALYSIS_RETENTION_PERIOD=24
ANALYSIS_ENABLE_CACHE=true
ANALYSIS_ENABLE_PARALLEL=true
ANALYSIS_MAX_WORKERS=5

# Анализатор роста
GROWTH_ANALYZER_ENABLED=true
GROWTH_ANALYZER_MIN_CONFIDENCE=60.0
GROWTH_ANALYZER_MIN_GROWTH=2.0
GROWTH_ANALYZER_CONTINUITY_THRESHOLD=0.7

# Анализатор падения
FALL_ANALYZER_ENABLED=true
FALL_ANALYZER_MIN_CONFIDENCE=60.0
FALL_ANALYZER_MIN_FALL=2.0
FALL_ANALYZER_CONTINUITY_THRESHOLD=0.7

# Анализатор непрерывности
CONTINUOUS_ANALYZER_ENABLED=true
CONTINUOUS_ANALYZER_MIN_POINTS=3

# Шина событий (EventBus)
EVENT_BUS_BUFFER_SIZE=1000
EVENT_BUS_WORKER_COUNT=10
EVENT_BUS_ENABLE_METRICS=true
EVENT_BUS_ENABLE_LOGGING=true

# ============================================
# ФИЛЬТРАЦИЯ СИГНАЛОВ
# ============================================

# Включить фильтрацию сигналов
SIGNAL_FILTERS_ENABLED=false

# Минимальная уверенность сигнала (%)
MIN_CONFIDENCE=50.0

# Максимум сигналов в минуту для одного символа
MAX_SIGNALS_PER_MIN=5

# Паттерны для включения (через запятую, поддерживает *)
SIGNAL_INCLUDE_PATTERNS=BTC*,ETH*,BNB*

# Паттерны для исключения (через запятую, поддерживает *)
SIGNAL_EXCLUDE_PATTERNS=*DOWN*,*UP*,*BEAR*,*BULL*

# ============================================
# НАСТРОЙКИ ОТОБРАЖЕНИЯ
# ============================================

# Режим отображения (compact | detailed)
DISPLAY_MODE=compact

# Максимум сигналов в одном выводе
MAX_SIGNALS_PER_BATCH=10

# Минимальная уверенность для отображения
MIN_CONFIDENCE_DISPLAY=30

# Что отображать
DISPLAY_GROWTH=true
DISPLAY_FALL=true
DISPLAY_PERIODS=5,15,30

# Цветовой вывод в терминале
USE_COLORS=true

# ============================================
# TELEGRAM БОТ
# ============================================

# Основные настройки Telegram
TELEGRAM_ENABLED=true
TG_API_KEY=your_telegram_bot_token
TG_CHAT_ID=your_chat_id

# Типы уведомлений
TELEGRAM_NOTIFY_GROWTH=true
TELEGRAM_NOTIFY_FALL=true

# Пороги для Telegram уведомлений
TELEGRAM_GROWTH_THRESHOLD=0.5
TELEGRAM_FALL_THRESHOLD=0.5

# Формат сообщений (compact | detailed)
MESSAGE_FORMAT=compact
INCLUDE_24H_STATS=false

# Вебхук (опционально)
TELEGRAM_WEBHOOK_PORT=8443
TELEGRAM_WEBHOOK_URL=https://ваш-домен.com

# ============================================
# ПРОИЗВОДИТЕЛЬНОСТЬ И ЛОГИРОВАНИЕ
# ============================================

# Настройки логирования
LOG_LEVEL=info
LOG_FILE=logs/growth.log

# HTTP сервер (для мониторинга)
HTTP_PORT=8080
HTTP_ENABLED=false

# Устаревшие настройки (для обратной совместимости)
UPDATE_INTERVAL=5
CHECK_CONTINUITY=false
MIN_DATA_POINTS=2
GROWTH_THRESHOLD=0.05
FALL_THRESHOLD=0.05
GROWTH_PERIODS=5,15,30

# www.coinglass.com