# ============================================
# BYBIT API CONFIGURATION
# ============================================

# Mainnet API Keys (для реальной торговли)
BYBIT_API_KEY=
BYBIT_SECRET_KEY=
BYBIT_API_URL=https://api.bybit.com

# Testnet API Keys (для тестирования)
BYBIT_TESTNET_API_KEY=ваш_testnet_api_key
BYBIT_TESTNET_SECRET_KEY=ваш_testnet_secret_key
BYBIT_API_TEST_URL=https://api-testnet.bybit.com

# Network Selection
USE_TESTNET=false

# ============================================
# FUTURES TRADING CONFIGURATION
# ============================================

# Futures Market
FUTURES_CATEGORY=linear
FUTURES_LEVERAGE=10.0

# Trading Settings
TRADING_SYMBOL=BTCUSDT
TRADING_ENABLED=false

# ============================================
# SIGNAL MONITORING CONFIGURATION
# ============================================

# Signal Detection (понижаем порог для теста)
ALERT_THRESHOLD=0.2          # 0.2% для тестирования
UPDATE_INTERVAL=15           # 15 секунд для быстрого теста
TRACKED_INTERVALS=5  # Короткие интервалы для теста

# Signal Filtering
SIGNAL_COOLDOWN=30          # 30 секунд для теста
MIN_VOLUME_FUTURES=0        # Отключаем фильтр по объему для теста
MAX_SIGNALS_PER_CHECK=10

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================

MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=10
RATE_LIMIT_DELAY=100
PRICE_HISTORY_SIZE=1000
USE_MEMORY_CACHE=true

# ============================================
# HTTP & WEBSOCKET SERVER
# ============================================

HTTP_PORT=8080
HTTP_ENABLED=false          # Отключаем HTTP для чистоты вывода
WEBSOCKET_ENABLED=false

# ============================================
# LOGGING & MONITORING
# ============================================

LOG_LEVEL=info
LOG_FILE=logs/bot.log
LOG_SIGNALS_TO_FILE=true
SIGNALS_LOG_FILE=logs/signals.log
CONSOLE_OUTPUT=true
COLORED_OUTPUT=true

# ============================================
# DISPLAY SETTINGS
# ============================================

TERMINAL_WIDTH=80
USE_COLORS=true
SHOW_SYMBOL_LINKS=true


# ============================================
# GROWTH MONITORING CONFIGURATION
# ============================================

# Growth Periods (in minutes)
GROWTH_PERIODS=5

# Growth/Fall Thresholds (in percent)
GROWTH_THRESHOLD=0.2   # Минимальный рост для сигнала
FALL_THRESHOLD=0.2     # Минимальное падение для сигнала

# Monitoring Settings
CHECK_CONTINUITY=true   # Проверять непрерывность роста/падения
MIN_DATA_POINTS=3       # Минимальное количество точек данных

# Signal Filtering
MIN_VOLUME_GROWTH=100000  # Минимальный объем $100K для сигналов роста
SIGNAL_COOLDOWN=300       # 5 минут между одинаковыми сигналами

# Фильтрация
MIN_VOLUME_USDT=100000